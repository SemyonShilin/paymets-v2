<%= form_for [@month, @payment], action: new_month_payment_path do |f| %>
  <div class="center"><%= render 'shared/error_messages', obj: @payment %></div>

    <div class="row center">
      <div class="col-lg-6 col-xs-6 text-right">
        <%= f.label 'Сумма платежа' %>
      </div>
      <div class="col-lg-6 col-xs-6 text-left">
        <%= f.text_field :payment %>
      </div>
    </div>

    <div class="row center">
      <div class="col-lg-6 col-xs-6 text-right">
        <%= f.label 'Затраты на ремонт' %>
      </div>
      <div class="col-lg-6 col-xs-6 text-left">
        <%= f.text_field :other_payment %>
      </div>
    </div>

    <div class="row center">
      <div class="col-lg-6 col-xs-6 text-right">
        <%= f.label 'Комментарий' %>
      </div>
      <div class="col-lg-6 col-xs-6 text-left">
        <%= f.text_field :description %>
      </div>
    </div>

    <div class="row center">
      <div class="col-lg-12 col-xs-12"><%= f.submit 'Добавить платеж', class: 'btn btn-success' %></div>
    </div>

<% end %>

