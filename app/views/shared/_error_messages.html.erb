<% if obj.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        У Вас имеется <%= pluralize(obj.errors.count, 'ошибка') %>.
      </div>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
