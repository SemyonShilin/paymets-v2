<div class="row margin-bottom">
  <div class="col-lg-12 col-xs-12 center"><h3><strong>Выберите год:</strong></h3></div>
</div>

<% @years.each do |year| %>
  <div class="row margin-bottom">
    <div class="col-lg-6 col-xs-6 center" id="size-year">
      <%= link_to year.value_year, year_months_path(year.value_year) %>
    </div>
    <div class="col-lg-6 col-xs-6 center">
      <%= button_to 'Показать платежи за год', year_payments_path(year.value_year),
                                        method: :get, class: 'btn btn-success' %>
    </div>
  </div>
<% end %>

<div class="row margin-bottom">
  <div class="col-lg-6 col-xs-6 center">
    <%= add_link_to_for_admin('Добавить год'){new_year_path} %>
  </div>
</div>

<div class="row">
  <div class="col-lg-6 col-xs-6 text-center">
    <h4><strong>Общая сумма долга:</strong></h4>
  </div>
  <div class="col-lg-6 col-xs-6 text-center">
    <h4><strong><%= @debit %></strong></h4>
  </div>
</div>